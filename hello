def add(request, pk):
    tasks = task.objects.get(id=pk)
    form = TaskForm(instance=tasks)
    if request.method == 'POST':
        form = TaskForm(request.POST, instance=tasks)
        if form.is_valid():
            form.save()
            return redirect('index')
    context = {'form':form}
    return render(request, "index.html", context=context)